                <DataTemplate x:Key="NewAnnotateTab" DataType="TabItem">
                    <DockPanel>

                        <Grid>
                            <Image Width="100" Height="40" Source="pencil.jpg" Opacity="0.3"/>
                            <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="21"/>
                        </Grid>

                        <!--<Button Name="btnDelete" FontSize="35" DockPanel.Dock="Right" Margin="5,0,0,0" Padding="0" Click="btnDelete_Click" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type TabItem}}, Path=Name}">
